<%= form_with(model: post, local: true, html: { class: 'box has-text-centered' }) do |form| %>
  <% if post.errors.any? %>
    <div class="notification is-danger">
      <h2 class="title is-4"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :photo, class: 'label' %>
    <div class="control">
      <%= form.file_field :photo, accept: "image/*", class: 'input' %>
    </div>
  </div>

  <div class="field">
    <%= form.label :description, class: 'label' %>
    <div class="control">
      <%= form.text_area :description, class: 'textarea' %>
    </div>
  </div>

  <div class="field">
    <%= form.label :when_went, class: 'label' %>
    <div class="control">
      <%= form.datetime_field :when_went, class: 'input' %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= form.submit 'Guardar', class: 'button is-primary' %>
    </div>
  </div>
<% end %>
